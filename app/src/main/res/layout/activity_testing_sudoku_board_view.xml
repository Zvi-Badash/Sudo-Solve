<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestingSudokuBoardViewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="378dp"
        android:layout_height="376dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998">

        <com.zvibadash.sudosolve.SudokuBoardView
            android:id="@+id/sbv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isEditable="false"
            app:highlightedColor="#BB8BC34A"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-37dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="254dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btSudokuKeyboardOne"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8pt"
                    android:text="1" />

                <Button
                    android:id="@+id/btSudokuKeyboardTwo"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8pt"
                    android:text="2" />

                <Button
                    android:id="@+id/btSudokuKeyboardThree"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8pt"
                    android:text="3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btSudokuKeyboardFour"
                    android:layout_width="20pt"
                    android:layout_height="wrap_content"
                    android:layout_margin="8pt"
                    android:text="4" />

                <Button
                    android:id="@+id/btSudokuKeyboardFive"
                    android:layout_width="20pt"
                    android:layout_height="wrap_content"
                    android:layout_margin="8pt"
                    android:text="5" />

                <Button
                    android:id="@+id/btSudokuKeyboardSix"
                    android:layout_width="20pt"
                    android:layout_height="wrap_content"
                    android:layout_margin="8pt"
                    android:text="6" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btSudokuKeyboardSeven"
                    android:layout_width="20pt"
                    android:layout_height="wrap_content"
                    android:layout_margin="8pt"
                    android:minHeight="48dp"
                    android:text="7"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/btSudokuKeyboardEight"
                    android:layout_width="20pt"
                    android:layout_height="wrap_content"
                    android:layout_margin="8pt"
                    android:minHeight="48dp"
                    android:text="8"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/btSudokuKeyboardNine"
                    android:layout_width="20pt"
                    android:layout_height="wrap_content"
                    android:layout_margin="8pt"
                    android:minHeight="48dp"
                    android:text="9"
                    tools:ignore="TouchTargetSizeCheck" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btSudokuKeyboardDel"
            android:layout_width="90pt"
            android:layout_height="match_parent"
            android:layout_margin="10pt"
            android:layout_weight="1"
            android:text="DEL" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>