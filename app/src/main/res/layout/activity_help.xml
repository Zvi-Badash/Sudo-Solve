<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White_Baby_Blue_Eyes"
    tools:context=".HelpActivity">

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                style="@style/BasicHeadingStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Need some help? No problem." />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_margin="20dp"
                android:background="@color/Gold_Crayola" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/Gold_Crayola"
                android:dividerPadding="20dp"
                android:showDividers="middle">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical">

                    <TextView
                        android:id="@+id/textView12"
                        style="@style/BasicTextViewStyle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round_regular"
                        android:padding="10dp"
                        android:text="@string/helpStringA"
                        android:textAlignment="viewStart" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="0dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/pencil_clip" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="0dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/camera_clip" />

                    <TextView
                        android:id="@+id/textView13"
                        style="@style/BasicTextViewStyle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round_regular"
                        android:padding="10dp"
                        android:text="@string/helpStringB"
                        android:textAlignment="viewStart" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical">

                    <TextView
                        android:id="@+id/textView14"
                        style="@style/BasicTextViewStyle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round_regular"
                        android:maxWidth="200dp"
                        android:padding="10dp"
                        android:text="@string/helpStringC"
                        android:textAlignment="viewStart" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="0dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/account_clip" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>